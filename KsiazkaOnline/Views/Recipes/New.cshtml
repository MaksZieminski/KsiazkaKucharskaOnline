@model KsiazkaOnline.ViewModels.NewRecipeViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@Html.ValidationSummary()
@using (Html.BeginForm("Save", "Recipes"))
{
    <div class="form-group">
        <label>Tytuł Dania</label>
        @Html.TextBoxFor(r => r.recipe.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.recipe.Title)

    </div>
    <div class="form-group">
        <label>Opis przygotowania dania</label>
        @Html.TextBoxFor(r => r.recipe.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(r => r.recipe.RecipeTypeId)
        @Html.DropDownListFor(r => r.recipe.RecipeTypeId, new SelectList(@Model.types, "Id", "Name"), "Wybierz rodzaj", new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.recipe.RecipeTypeId)

    </div>

    @Html.HiddenFor(r => r.recipe.ID)

    <button type="submit" , class="btn btn-primary">Dodaj</button>
}